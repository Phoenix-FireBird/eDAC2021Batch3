<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.phoenix.demos.Employee" table="optiontwoEmp" >
		<id name="empId">
			<generator class="assigned"></generator>
		</id>
		<property name="empName"></property>
		<union-subclass name="com.phoenix.demos.ProjectManager" table="optiontwopm">
			<property name="teamSize"></property>
		</union-subclass>
	</class>
</hibernate-mapping>